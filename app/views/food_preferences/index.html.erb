<p id="notice"><%= notice %></p>

<strong>Listing Food Preference</strong>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @food_preferences.each do |food_preference| %>
    <tr>
      <td><%= food_preference.name %></td>
      <td><%= link_to 'Show', food_preference %></td>
      <td><%= link_to 'Edit', edit_food_preference_path(food_preference) %></td>
      <td><%= link_to 'Destroy', food_preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
