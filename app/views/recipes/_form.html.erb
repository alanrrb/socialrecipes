<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :serves %><br>
    <%= f.number_field :serves %>
  </div>
  <div class="field">
    <%= f.label :food_preference %><br>
    <%= f.collection_select(:food_preference_id, FoodPreference.all, :id, :name, prompt: "Selecione") %>
  </div>
  <div class="field">
    <%= f.label :food_type %><br>
    <%= f.collection_select(:food_type_id, FoodType.all, :id, :name, prompt: "Selecione") %>
  </div>
  <div class="field">
    <%= f.label :cuisine %><br>
    <%= f.collection_select(:cuisine_id, Cuisine.all, :id, :name, prompt: "Selecione") %>
  </div>
  <div class="field">
    <%= f.label :cooking_time %><br>
    <%= f.number_field :cooking_time %>
  </div>
  <div class="field">
    <%= f.label :difficulty %><br>
    <%= f.text_field :difficulty %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :procedure %><br>
    <%= f.text_area :procedure %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
