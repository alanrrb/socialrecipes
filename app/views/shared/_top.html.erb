<div class="container">
  <div class="row social-recipe-panel">
    <div class="col-md-2">
    <%= link_to root_path do %>
      <%= image_tag "social_recipes.png", class: "img-responsive", alt: "logo" %>
    <% end %>
    </div>
    <div class="col-md-2">
    <%= link_to root_path do %>
      <h3>Social Recipes</h3></div>
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      <% if user_signed_in? %>
        <%= current_user.email %> / <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Login", user_session_path %> / <%= link_to "Sign up", new_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>

