  <div class="row">
    <div class="col-md-3">
      <%= image_tag recipe.photo.url(:thumb), class: "image-responsive" %>
    </div>
    <div class="col-md-9">
      <h4><%= link_to recipe.name, recipe %></h4>
        <p><strong>Food Preference: </strong><%= recipe.food_preference.name %></p>
        <p><strong>Food Type: </strong><%= recipe.food_type.name %></p>
        <p><strong>Cuisine: </strong><%= recipe.cuisine.name %></p>
        <p><strong>Difficulty: </strong> <%= recipe.difficulty%></p>
    </div>
  </div>
